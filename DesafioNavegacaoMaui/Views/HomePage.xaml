<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesafioNavegacaoMaui.Views.HomePage"
             Background="DarkSeaGreen"
             Title="">

    <Grid
            Padding="0"
            Margin="0">
        <ScrollView
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Border
                BackgroundColor="White"
                Opacity="0.8"
                StrokeShape="RoundRectangle 30"
                StrokeThickness="0"
                Shadow="0 0 12 Grey 0.8"
                MaximumWidthRequest="800"
                MinimumHeightRequest="500"
                Padding="20,0"
                Margin="20">
                <Grid
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
                    RowSpacing="10"
                    Padding="40,80"
                    VerticalOptions="Fill"
                HorizontalOptions="Center">
                    <Label
                        Text="Página Principal"
                        Grid.Row="0"
                        FontSize="36"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Margin="0,0,0,20"/>

                    <Image
                    Source="correct_symbol.png"
                    Grid.Row="1"
                    Aspect="AspectFit"
                    MinimumHeightRequest="100"
                    MaximumHeightRequest="180"/>
                    <Label
                        Text="Login realizado com sucesso!"
                        Grid.Row="2"
                        FontSize="30"
                        TextColor="DarkGreen"
                        Margin="0,20,0,0"
                        HorizontalOptions="Center"/>
                    <Label
                        Text="Bem-Vindo(a)"
                        Grid.Row="3"
                        FontSize="30"
                        TextColor="DarkGreen"
                        HorizontalOptions="Center"/>

                    <Label
                        Text="Nesta área do aplicativo você pode navegar para outras seções ou gerenciar seu perfil aqui"
                        Grid.Row="4"
                        FontSize="20"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        Margin="0,20,0,0"/>

                    <Button
                        Text="Sair"
                        Grid.Row="5"
                        Command="{Binding SairCommand}"
                        Style="{StaticResource LogoutButton}"/>
                </Grid>
            </Border>

        </ScrollView>

    </Grid>

</ContentPage>
